<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ui.HomeController">
    <top>
        <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
              prefHeight="48.0" spacing="10.0" style="-fx-background-color: f1f1f1;" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="20.0" right="20.0"/>
            </padding>
            <children>
                <Label text="Hi, User">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Separator layoutX="266.0" layoutY="10.0" maxHeight="1.7976931348623157E308"
                           maxWidth="1.7976931348623157E308" visible="false" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="searchTextField" prefWidth="300.0" promptText="Search by name, category or id"/>
                <Button fx:id="searchButton" mnemonicParsing="false" style="-fx-background-color: #4891FF;"
                        text="Search" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="12.0"/>
                    </font>
                </Button>
                <Separator maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" visible="false"
                           HBox.hgrow="ALWAYS"/>
                <ImageView fitHeight="36.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../Icons/Cart.png"/>
                    </image>
                </ImageView>
                <Button fx:id="viewCart" mnemonicParsing="false" style="-fx-background-color: #4891FF;" text="View Cart"
                        textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="12.0"/>
                    </font>
                </Button>
                <Button fx:id="logOut" layoutX="720.0" layoutY="21.0" mnemonicParsing="false"
                        style="-fx-background-color: #4891FF;" text="Log Out" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="12.0"/>
                    </font>
                </Button>
            </children>
        </HBox>
    </top>
    <left>
        <ListView fx:id="tabsListView" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" pickOnBounds="false"
                  prefWidth="140.0" BorderPane.alignment="CENTER"/>
    </left>
    <right>
        <VBox fx:id="detailsMenu" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" prefWidth="200.0"
              style="-fx-background-color: #ffffff;" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Product details"
                       textAlignment="CENTER" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <ListView fx:id="detailsListView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                          style="-fx-background-color: white;" VBox.vgrow="ALWAYS"/>
                <VBox maxHeight="-Infinity" spacing="10.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="10.0">
                            <children>
                                <Label text="Total Price:"/>
                                <Label fx:id="totalPrice" layoutX="10.0" layoutY="10.0" text="100">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                       text="Quantity" HBox.hgrow="ALWAYS"/>
                                <Button fx:id="decrease" mnemonicParsing="false" text="-"/>
                                <TextField fx:id="quantityField" alignment="CENTER" editable="false"
                                           maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="56.0"
                                           HBox.hgrow="NEVER">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </TextField>
                                <Button fx:id="increase" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                                        text="+"/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Button fx:id="addToCart" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                        style="-fx-background-color: F94309;" text="Add to Cart">
                                    <font>
                                        <Font name="Segoe UI Bold" size="12.0"/>
                                    </font>
                                </Button>
                                <Separator maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                           visible="false" HBox.hgrow="ALWAYS"/>
                                <Button fx:id="buyNowButton" layoutX="10.0" layoutY="10.0"
                                        maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                        style="-fx-background-color: #02B8FF;" text="Buy Now">
                                    <font>
                                        <Font name="Segoe UI Bold" size="12.0"/>
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
            </children>
        </VBox>
    </right>
    <center>
        <TableView fx:id="productTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="productId" maxWidth="6000.0" prefWidth="-1.0" text="Id"/>
                <TableColumn fx:id="productName" maxWidth="6000.0" prefWidth="-1.0" text="Name"/>
                <TableColumn fx:id="productCategory" maxWidth="6000.0" prefWidth="-1.0" text="Category"/>
                <TableColumn fx:id="productPrice" maxWidth="6000.0" prefWidth="-1.0" text="Price (Tk)"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
