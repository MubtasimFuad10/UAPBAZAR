<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
      prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.ui.AdminController">
    <children>
        <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
              prefHeight="48.0" spacing="10.0" style="-fx-background-color: f1f1f1;">
            <padding>
                <Insets left="20.0" right="20.0"/>
            </padding>
            <children>
                <Label text="Dashboard">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Separator layoutX="266.0" layoutY="10.0" maxHeight="1.7976931348623157E308"
                           maxWidth="1.7976931348623157E308" visible="false" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="searchTextField" prefWidth="300.0" promptText="Search by name, category or id"/>
                <Separator maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" visible="false"
                           HBox.hgrow="ALWAYS"/>
                <Button fx:id="viewHome" alignment="CENTER" mnemonicParsing="false"
                        style="-fx-background-color: #4891FF;" text="Home" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="12.0"/>
                    </font>
                </Button>
                <Button fx:id="logOut" layoutX="720.0" layoutY="21.0" mnemonicParsing="false"
                        style="-fx-background-color: #4891FF;" text="Log Out" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="12.0"/>
                    </font>
                </Button>
            </children>
        </HBox>
        <TabPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tabClosingPolicy="UNAVAILABLE"
                 VBox.vgrow="ALWAYS">
            <tabs>
                <Tab text="Products">
                    <content>
                        <AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                            <children>
                                <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <left>
                                        <ListView fx:id="tabsListView" maxHeight="1.7976931348623157E308"
                                                  maxWidth="-Infinity" pickOnBounds="false" prefWidth="140.0"
                                                  BorderPane.alignment="CENTER"/>
                                    </left>
                                    <right>
                                        <VBox fx:id="detailsMenu" maxHeight="1.7976931348623157E308"
                                              maxWidth="-Infinity" prefWidth="200.0"
                                              style="-fx-background-color: #ffffff;" BorderPane.alignment="CENTER">
                                            <children>
                                                <Label alignment="CENTER" maxWidth="1.7976931348623157E308"
                                                       text="Product details" textAlignment="CENTER"
                                                       VBox.vgrow="ALWAYS">
                                                    <VBox.margin>
                                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                                    </VBox.margin>
                                                    <font>
                                                        <Font size="14.0"/>
                                                    </font>
                                                </Label>
                                                <ListView fx:id="detailsListView" cacheShape="false" centerShape="false"
                                                          focusTraversable="false" maxHeight="1.7976931348623157E308"
                                                          maxWidth="1.7976931348623157E308" scaleShape="false"
                                                          VBox.vgrow="ALWAYS"/>
                                                <VBox maxHeight="-Infinity" spacing="10.0">
                                                    <children>
                                                        <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308"
                                                              spacing="10.0">
                                                            <children>
                                                                <Label fx:id="totalPrice" layoutX="10.0" layoutY="10.0"
                                                                       text="100" textFill="WHITE">
                                                                    <font>
                                                                        <Font size="14.0"/>
                                                                    </font>
                                                                </Label>
                                                            </children>
                                                        </HBox>
                                                        <HBox spacing="10.0">
                                                            <children>
                                                                <Button fx:id="decrease" mnemonicParsing="false"
                                                                        style="-fx-background-color: white;" text="-"
                                                                        textFill="WHITE"/>
                                                                <TextField fx:id="quantityField" alignment="CENTER"
                                                                           editable="false" maxHeight="-Infinity"
                                                                           maxWidth="-Infinity" prefWidth="56.0"
                                                                           style="-fx-background-color: white;"
                                                                           HBox.hgrow="NEVER">
                                                                    <font>
                                                                        <Font size="14.0"/>
                                                                    </font>
                                                                </TextField>
                                                                <Button fx:id="increase" layoutX="10.0" layoutY="10.0"
                                                                        mnemonicParsing="false"
                                                                        style="-fx-background-color: white;" text="+"
                                                                        textFill="WHITE"/>
                                                            </children>
                                                        </HBox>
                                                        <HBox alignment="CENTER_LEFT">
                                                            <children>
                                                                <Button fx:id="addToCart"
                                                                        maxWidth="1.7976931348623157E308"
                                                                        mnemonicParsing="false"
                                                                        style="-fx-background-color: white;"
                                                                        text="Add to Cart" textFill="WHITE">
                                                                    <font>
                                                                        <Font name="Segoe UI Bold" size="12.0"/>
                                                                    </font>
                                                                </Button>
                                                                <Separator maxHeight="1.7976931348623157E308"
                                                                           maxWidth="1.7976931348623157E308"
                                                                           visible="false" HBox.hgrow="ALWAYS"/>
                                                                <Button fx:id="buyNow" layoutX="10.0" layoutY="10.0"
                                                                        maxWidth="1.7976931348623157E308"
                                                                        mnemonicParsing="false"
                                                                        style="-fx-background-color: white;"
                                                                        text="Buy Now" textFill="WHITE">
                                                                    <font>
                                                                        <Font name="Segoe UI Bold" size="12.0"/>
                                                                    </font>
                                                                </Button>
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                    <padding>
                                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                                    </padding>
                                                </VBox>
                                            </children>
                                        </VBox>
                                    </right>
                                    <center>
                                        <TableView fx:id="productTable" maxHeight="1.7976931348623157E308"
                                                   maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
                                            <columns>
                                                <TableColumn fx:id="productId" maxWidth="60.0" minWidth="60.0"
                                                             prefWidth="60.0" text="Id"/>
                                                <TableColumn fx:id="productName" minWidth="100.0" text="Name"/>
                                                <TableColumn fx:id="productCategory" maxWidth="90.0" minWidth="90.0"
                                                             prefWidth="90.0" text="Category"/>
                                                <TableColumn maxWidth="60.0" minWidth="60.0" prefWidth="60.0"
                                                             text="Quantity"/>
                                                <TableColumn fx:id="productPrice" maxWidth="60.0" minWidth="60.0"
                                                             text="Price"/>
                                                <TableColumn fx:id="productPrice1" maxWidth="80.0" minWidth="80.0"
                                                             text="Sale Price"/>
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                            </columnResizePolicy>
                                        </TableView>
                                    </center>
                                </BorderPane>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Add Product">
                    <content>
                        <AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                            <children>
                                <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308"
                                      maxWidth="1.7976931348623157E308" spacing="20.0" AnchorPane.bottomAnchor="0.0"
                                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                      AnchorPane.topAnchor="0.0">
                                    <children>
                                        <GridPane alignment="CENTER_LEFT" hgap="10.0" maxHeight="-Infinity"
                                                  maxWidth="400.0" vgap="10.0" VBox.vgrow="ALWAYS">
                                            <columnConstraints>
                                                <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="10.0"
                                                                   prefWidth="80.0"/>
                                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints maxHeight="-Infinity" minHeight="10.0" vgrow="NEVER"/>
                                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <TextField GridPane.columnIndex="1" GridPane.vgrow="ALWAYS"/>
                                                <Label text="Name"/>
                                                <Label text="Price" GridPane.rowIndex="1"/>
                                                <Label text="Quantity" GridPane.rowIndex="2"/>
                                                <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                                <TextField GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                                <ComboBox maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                                                          GridPane.hgrow="ALWAYS" GridPane.rowIndex="3"/>
                                                <Label text="Category" GridPane.rowIndex="3"/>
                                            </children>
                                        </GridPane>
                                    </children>
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                    </padding>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</VBox>
